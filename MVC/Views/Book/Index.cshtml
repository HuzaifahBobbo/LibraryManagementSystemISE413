@model IEnumerable<LibraryManagementSystem.BLL.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h1>@ViewData["Title"]</h1>

<a href="@Url.Action("Create", "Book")">Create New Book</a>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author.Name</td>
                <td>@book.Category.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Book", new { id = book.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Book", new { id = book.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
