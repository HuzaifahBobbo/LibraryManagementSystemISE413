@model IEnumerable<LibraryManagementSystem.BLL.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>@ViewData["Title"]</h1>

<a href="@Url.Action("Create", "Category")">Create New Category</a>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = category.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Category", new { id = category.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
